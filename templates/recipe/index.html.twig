{% extends 'base.html.twig' %}

{% block title %} Toutes les recettes {% endblock %}

{%  block body %}

    <h1>Toutes mes recettes</h1>

    <a class="btn btn-primary btn-sm" href="{{ path('recipe.create') }}">Cr√©er une recette</a>

    <table class="table">
        <thead>
            <tr>
                <th>Titre de la recette</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for recipe in recipes %}
                <tr>
                    <td>
                        <a href="{{ path('recipe.show', {id : recipe.id, slug : recipe.slug }) }}">{{ recipe.title }}</a>
                    </td>
                    <td>
                        <div class="d-flex gap-1">
                            <a class="btn btn-primary btn-sm" href="{{ path('recipe.edit', {id : recipe.id}) }}">Editer</a>
                            <a class="btn btn-danger btn-sm" href="{{ path('recipe.delete', {'id': recipe.id}) }}">Supprimer</a>
                        </div>
                    </td>

                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}