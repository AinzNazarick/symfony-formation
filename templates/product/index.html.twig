{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Tous les produits</h1>

        <div class="mb-4 text-center">
            <a href="{{ path('product.create') }}" class="btn btn-success btn-lg">Créer un nouveau produit</a>
        </div>

        <div class="row">
            {% for product in products %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.description }}</p>
                            <p class="card-text font-weight-bold text-danger">{{ product.price }} €</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="{{ path('product.show', { 'id': product.id }) }}" class="btn btn-info btn-sm flex-grow-1 me-1">Voir Détails</a>
                            <a href="{{ path('product.edit', { 'id': product.id }) }}" class="btn btn-warning btn-sm flex-grow-1 me-1">Modifier</a>
                            <a href="{{ path('product.delete', { 'id': product.id }) }}" class="btn btn-danger btn-sm flex-grow-1">Supprimer</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center text-muted">Aucun produit disponible pour le moment.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
